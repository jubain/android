<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <net.skyscanner.backpack.card.BpkCardView
        android:id="@+id/heading1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="small"
        app:elevationLevel="focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:text="Departure"
                android:textSize="12dp" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Flight Number"
                android:textSize="10dp" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="B757-200"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="172dp"
                    android:layout_height="91dp"
                    android:orientation="vertical">

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:text="Airport Number"
                        android:textSize="10dp" />

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="173dp"
                        android:layout_height="match_parent"
                        android:text="B757-200"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Departure Time"
                        android:textSize="10dp" />

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:text="09:00 PM"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </net.skyscanner.backpack.card.BpkCardView>

    <net.skyscanner.backpack.card.BpkCardView
        android:id="@+id/bpkCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="small"
        app:elevationLevel="focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageVie"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:text="Arrival"
                android:textSize="12dp" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Flight Number"
                android:textSize="10dp" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="B757-200"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="172dp"
                    android:layout_height="91dp"
                    android:orientation="vertical">

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:text="Airport Number"
                        android:textSize="10dp" />

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="173dp"
                        android:layout_height="match_parent"
                        android:text="B757-200"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arrival Time"
                        android:textSize="10dp" />

                    <net.skyscanner.backpack.text.BpkText
                        style="@style/bpkTextHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:text="09:00 PM"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </net.skyscanner.backpack.card.BpkCardView>

</androidx.constraintlayout.widget.ConstraintLayout>